#!/bin/bash

# Kill any running python or java procs
./kill-mirror

# Get arguments
for var in "$@"
do
	case $var in
		"-sw")
			sw="-Dprism.order=sw"
			echo "USING SOFTWARE RENDERING"
			;;
		"-fullscreen")
			fullscreen=$var
			;;
		*)
	esac
done

# Application banner
figlet -f big 'smart  mirror'

# Get and print web service address
case $OSTYPE in
    linux*) # Linux
        address=$(ifconfig wlan0 | awk '/inet addr/{print substr($2, 6)}'):8080
        ;;
    darwin*) # MacOS
        address=$(ifconfig en0 | awk '/inet /{print substr($2, 1)}'):8080
        ;;
    *)
esac

echo Web service running on $address

# Start web server and javafx
cd web-service
python main.py --path ../resources/mirror_config.xml &
cd ..
java $sw -jar smart-mirror.jar -jarRun $fullscreen $address

# Kill all python and java when exiting
./kill-mirror
