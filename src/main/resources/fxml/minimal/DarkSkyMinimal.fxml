<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" styleClass="mirror-pane" stylesheets="@../../styles/mirror_style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="module.darksky.DarkSkyMinimalController">
   <children>
      <VBox alignment="CENTER" layoutX="-2.0" layoutY="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label fx:id="lblCurrentTemp" styleClass="temperature-minimal" text="60" />
                  <ImageView fx:id="imgWeatherIcon" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/partly_cloudy_night.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <Label fx:id="lblCurrentWeather" alignment="CENTER" styleClass="daily-summary-minimal" text="Mostly Cloudy" />
         </children>
      </VBox>
   </children>
</AnchorPane>
